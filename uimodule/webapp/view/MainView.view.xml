<mvc:View controllerName="com.pe.proyectoIntegrador.controller.MainView" 
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true" 
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:smartTable="sap.ui.comp.smarttable"
	height="100%">
    <f:DynamicPage id="dynamicPageId" class="sapUiNoContentPadding" headerExpanded="{/headerExpanded}" toggleHeaderOnTitleClick="{/titleClickable}">

        <f:title>
				<f:DynamicPageTitle>
					
                    <f:heading>
						<Title text="{i18n>title}"/>
					</f:heading>
					
					<f:expandedContent>
						<Label text=""/>
					</f:expandedContent>

					<f:snappedContent>
						<Label text="{i18n>consultor}"/>
					</f:snappedContent>

					<f:snappedTitleOnMobile>
						<Title text="{i18n>consultor}"/>
					</f:snappedTitleOnMobile>		

					<f:actions>
						<Button
								text="Activar/Desactivar Exportar"
								type="Emphasized"
								press="onToggleFooter"/>
						<Button
								text="Créditos de la aplicación"
								type="Transparent"
								press="onPressOpenPopover">
							<layoutData>
								<OverflowToolbarLayoutData priority="AlwaysOverflow" closeOverflowOnInteraction="false" />
							</layoutData>
						</Button>
					</f:actions>			
					
				</f:DynamicPageTitle>
		</f:title>

        <f:header>

				<f:DynamicPageHeader pinnable="true">

                    <layout:HorizontalLayout allowWrapping="true" >

                        <layout:VerticalLayout class="sapUiMediumMarginEnd">

                            <Image src="https://www.memorykings.pe/files_noticias/listado/memorykings-listado.png" width="180px" press="clickMemorykings"/>

							<Image src="https://aerocool.io/wp-content/uploads/2019/07/CYC-logo.png" width="180px" press="clickCyC"/>
                        
						</layout:VerticalLayout>

						<layout:VerticalLayout>

							<ObjectAttribute title="{i18n>consultorobj}"/>
							<Button text="{i18n>consultornombreobj}" type="Transparent" icon="sap-icon://account" press="onPressOpenPopover2"/>
                            <ObjectAttribute title="{i18n>cargoobj}"/>
							<Button text="{i18n>cargonombreobj}"  type="Transparent" icon="sap-icon://employee" enabled="false"/>
							
							<Image src="https://aslan.es/wp-content/uploads/2022/07/Seidor.png" width="120px" press="clicSeidor"/>

						</layout:VerticalLayout>
						
						<ToolbarSpacer/>

						<layout:VerticalLayout class="sapUiMediumMarginEnd">
						
							<Text text="Patrocinado por: "></Text>
                            <Image src="https://logodownload.org/wp-content/uploads/2018/03/logitech-logo-3.png" width="100px" press="clicLogitech"/>
							
                        
						</layout:VerticalLayout>

						<SearchField enableSuggestions="true" id="search" placeholder="Buscar" width="100%" class="search" liveChange="onSearch" value="{
											path : 'formularioSimple>/search'
										}"/>

					</layout:HorizontalLayout>

				</f:DynamicPageHeader>

		</f:header>

		<f:content>

				<IconTabBar id="iconTabBar" class="sapUiResponsiveContentPadding" selectedKey="{ path: 'formularioSimple>/tabSelect'}" >

					<items>

						<IconTabFilter key="0" id="tabproductos" text="Productos">

							<Table id="idProductsTable1" backgroundDesign="Solid" sticky="HeaderToolbar,ColumnHeaders" inset="false" class="sapUiSmallNegativeMarginBeginEnd" width="auto"
									items="{ path: 'formularioSimple>/listaTabla1',	sorter: { path: 'id' }
									}" >

								<headerToolbar>

									<Toolbar>

										<Title text="Productos ({= ${formularioSimple>/listaTabla1}.length })" level="H2"/>
										<ToolbarSpacer/>
										<Button type="Transparent" text="Agregar Producto" icon="sap-icon://add" press="onAddProducto"/>
										<Button type="Transparent" text="Configuración" icon="sap-icon://action-settings" press="onConfig"/>

									</Toolbar>

								</headerToolbar>

								<columns>

									<Column	hAlign="Begin" width="15%">

										<Text text="Nombre" />

									</Column>

									<Column	minScreenWidth="Desktop" demandPopin="true" hAlign="Begin" width="15%">

										<Text text="Descripción" />

									</Column>

									<Column	minScreenWidth="Desktop" demandPopin="true" hAlign="Center" width="5%">

										<Text text="Imagen" />

									</Column>

									<Column	hAlign="Center" width="10%">

										<Text text="Precio V." />

									</Column>

									<Column	minScreenWidth="Desktop" demandPopin="true" hAlign="Center" width="10%">

										<Text text="Precio C." />

									</Column>

									<Column hAlign="Center" width="8%">

										<Text text="Stock" />

									</Column>

									<Column	minScreenWidth="Tablet" demandPopin="true" hAlign="Center" width="10%">

										<Text text="Unidad M." />

									</Column>

									<Column	hAlign="Center" width="15%">

										<Text text="Proveedor" />

									</Column>

									<Column	minScreenWidth="Desktop" demandPopin="true" hAlign="Center" width="10%">

										<Text text="Activo" />

									</Column>

									<Column	hAlign="Center" width="5%" minScreenWidth="1450px" demandPopin="true">

										<Text text="Acciones" />

									</Column>

								</columns>

								<items>

									<ColumnListItem>

										<cells>

											<Text  text="{formularioSimple>nombre}" />
											<Text  text="{formularioSimple>descripcion}" />
											<Button id="_IDGenButton2" icon="sap-icon://picture" type="Emphasized" press="handleResponsivePopoverPress"
													ariaHasPopup="Dialog"/>
											<Text  text="S/. {formularioSimple>preciov}" />
											<Text  text="S/. {formularioSimple>precioc}" />
											<Text  text="{formularioSimple>stock}" />
											<Text  text="{formularioSimple>unidadm}" />
											<Text  text="{formularioSimple>proveedor}" />
											<ObjectStatus  text="{formularioSimple>activo}" state="Success" icon="sap-icon://message-success" />

											<HBox justifyContent="SpaceBetween">
												<Button id="_IDGenButton1" icon="sap-icon://edit" class="botoncito" press="onEditProducto"/>
												<Button
												press="onConfirmarEliminacion"
												icon="sap-icon://delete"
												ariaHasPopup="Dialog" />
												
											</HBox>

											
										</cells>

									</ColumnListItem>

								</items>
							</Table>

						</IconTabFilter>

						<IconTabFilter key="1" id="tabproveedores" text="Proveedores">

							<Table id="idProductsTable2" sticky="HeaderToolbar,ColumnHeaders" inset="false" class="sapUiSmallNegativeMarginBeginEnd" width="auto"
									items="{ path: 'formularioSimple>/listaTabla2',	sorter: { path: 'id' }
									}" >

								<headerToolbar>

									<Toolbar>

										<Title text="Proveedores ({= ${formularioSimple>/listaTabla2}.length })" level="H2"/>
										<ToolbarSpacer/>
										<Button type="Transparent" text="Agregar Proveedor" icon="sap-icon://add" press="onAddProveedor"/>

									</Toolbar>

								</headerToolbar>

								<columns>

									<Column	hAlign="Begin">

										<Text text="Nombre" />

									</Column>

									<Column	hAlign="Center">

										<Text text="Telefono" />

									</Column>

									<Column	minScreenWidth="Tablet"	demandPopin="true" hAlign="Center">

										<Text text="Dirección" />

									</Column>

									<Column	minScreenWidth="Desktop" demandPopin="true" hAlign="Center" >

										<Text text="Estado" />

									</Column>

								</columns>

								<items>

									<ColumnListItem>

										<cells>

											<Text  text="{formularioSimple>nombre}" />
											<Text  text="{formularioSimple>telefono}" />
											<Text  text="{formularioSimple>direccion}" />
											<ObjectStatus  text="{formularioSimple>estado}" state="Success" icon="sap-icon://message-success" />
											
										</cells>

									</ColumnListItem>

								</items>
							</Table>

						</IconTabFilter>

						<IconTabFilter key="2" text="Clientes">

							<Table id="idProductsTable3" sticky="HeaderToolbar,ColumnHeaders" inset="false" class="sapUiSmallNegativeMarginBeginEnd" width="auto"
									items="{ path: 'formularioSimple>/listaTabla3',	sorter: { path: 'id' }
									}" >

								<headerToolbar>

									<Toolbar>

										<Title text="Clientes ({= ${formularioSimple>/listaTabla3}.length })" level="H2"/>
										
										<ToolbarSpacer/>
										<Button type="Transparent" text="Agregar Cliente" icon="sap-icon://add" press="onAddCliente"/>

									</Toolbar>

								</headerToolbar>

								<columns>

									<Column	hAlign="Begin">

										<Text text="Nombres" />

									</Column>

									<Column	minScreenWidth="Tablet"	demandPopin="true" hAlign="Center">

										<Text text="Apellidos" />

									</Column>

									<Column	minScreenWidth="Desktop"	demandPopin="true" hAlign="Center">

										<Text text="E-mail" />

									</Column>

									<Column	minScreenWidth="Desktop" demandPopin="true" hAlign="Center" >

										<Text text="Sexo" />

									</Column>

									<Column	minScreenWidth="Tablet" demandPopin="true" hAlign="Center" >

										<Text text="Tipo Documento" />

									</Column>

									<Column	hAlign="Center" >

										<Text text="Número Documento" />

									</Column>

									<Column demandPopin="true" hAlign="Center" >

										<Text text="Celular" />

									</Column>

									<Column	minScreenWidth="Desktop" hAlign="Center" >

										<Text text="Distrito" />

									</Column>

									<Column	minScreenWidth="Desktop" demandPopin="true" hAlign="Center" >

										<Text text="Dirección" />

									</Column>

								</columns>

								<items>

									<ColumnListItem>

										<cells>

											<Text  text="{formularioSimple>nombres}" />
											<Text  text="{formularioSimple>apellidos}" />
											<Text  text="{formularioSimple>correoelectronico}" />
											<Text  text="{formularioSimple>sexo}" />
											<Text  text="{formularioSimple>tipodocumento}" />
											<Text  text="{formularioSimple>numdocumento}" />
											<Text  text="{formularioSimple>celular}" />
											<Text  text="{formularioSimple>distrito}" />
											<Text  text="{formularioSimple>direccion}" />
											
										</cells>

									</ColumnListItem>

								</items>
							</Table>

						</IconTabFilter>

						<IconTabFilter key="3" text="Unidad de Medida">

							<Table id="idProductsTable4" sticky="HeaderToolbar,ColumnHeaders" inset="false" class="sapUiSmallNegativeMarginBeginEnd" width="auto"
									items="{ path: 'formularioSimple>/listaTabla4',	sorter: { path: 'id' }
									}" >

								<headerToolbar>

									<Toolbar>

										<Title text="Unidad de Medida ({= ${formularioSimple>/listaTabla4}.length })" level="H2"/>
										
										<ToolbarSpacer/>
										<Button type="Transparent" text="Agregar Unidad de Medida" icon="sap-icon://add" press="onAddUnidadMedida"/>

									</Toolbar>

								</headerToolbar>

								<columns>

									<Column	hAlign="Begin">

										<Text text="Nombre" />

									</Column>

									<Column	minScreenWidth="Tablet"	demandPopin="true" hAlign="Center">

										<Text text="Descripcion" />

									</Column>

									<Column	hAlign="Center">

										<Text text="Abreviatura" />

									</Column>

									<Column	hAlign="Center" >

										<Text text="Estado" />

									</Column>									

								</columns>

								<items>

									<ColumnListItem>

										<cells>

											<Text  text="{formularioSimple>nombre}" />
											<Text  text="{formularioSimple>descripcion}" />
											<Text  text="{formularioSimple>abreviatura}" />
											<ObjectStatus  text="{formularioSimple>estado}" state="Success" icon="sap-icon://message-success" />
											
										</cells>

									</ColumnListItem>

								</items>
							</Table>

						</IconTabFilter>

					</items>

				</IconTabBar>

				
				
		</f:content>

		<f:footer>

			<OverflowToolbar>

				<Button type="Transparent" icon="sap-icon://message-information" press="onInfo"/>
				<Label text="Información sobre las opciones de exportar"/>

				<ToolbarSpacer/>

				<Button type="Accept" text="Exportar CSV" icon="sap-icon://documents" press="onDataExport"/>
				<Button type="Accept" text="Exportar Excel" icon="sap-icon://excel-attachment" press="onExportSpreadSheetXLSX"/>
				<Button type="Critical" text="Exportar PDF" icon="sap-icon://pdf-attachment" press="onExportPDF"/>

			</OverflowToolbar>

		</f:footer>

    </f:DynamicPage>

</mvc:View>
