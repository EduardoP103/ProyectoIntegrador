            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <layout:HorizontalLayout allowWrapping="true">
                    <layout:VerticalLayout class="sapUiMediumMarginEnd">
                        <Image src="https://upload.wikimedia.org/wikipedia/en/9/92/Bowser_Stock_Art_2021.png" width="100px" />
                        <!-- <Image src="https://sdk.openui5.org/test-resources/sap/ui/documentation/sdk/images/bigimgs/273303_low_jpg_srgb.jpg" width="100px" /> -->
                    </layout:VerticalLayout>

                    <layout:VerticalLayout>
                        <ObjectAttribute title="Consultor"/>
                        <ObjectStatus text="Guillermo Eduardo" state="Success" />

                        <ObjectAttribute title="Cargo"/>
                        <ObjectStatus text="Analista de Sistemas" state="Success" />

                    </layout:VerticalLayout>
                </layout:HorizontalLayout>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <IconTabBar id="iconTabBar" class="sapUiResponsiveContentPadding">
                <items>
                    <IconTabFilter text="Productos">
                        <Table id="idProductsTable" sticky="HeaderToolbar,ColumnHeaders" inset="false" items="{path: 'localModel>/listOfProducts'}" class="sapFDynamicPageAlignContent" width="auto">
                            <headerToolbar>
                                <OverflowToolbar>
                                    <content>
                                        <Title text="Productos ({= ${localModel>/listOfProducts}.length })" level="H2"/>
                                        <ToolbarSpacer />
                                        <Button text="Agregar" icon="sap-icon://add" type="Transparent"/>
                                        <Button text="Configuración" icon="sap-icon://action-settings" type="Transparent"/>

                                    </content>
                                </OverflowToolbar>

                            </headerToolbar>
                            <columns>
                                <Column >
                                    <Text text="Nombre" />
                                </Column>
                                <Column >
                                    <Text text="Descripción" />
                                </Column>
                                <Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
                                    <Text text="Imagen" />
                                </Column>
                                <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                                    <Text text="Precio V." />
                                </Column>
                                <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                                    <Text text="Precio C." />
                                </Column>

                                <Column minScreenWidth="Tablet" demandPopin="true">
                                    <Text text="Stock" />
                                </Column>

                                <Column minScreenWidth="Tablet" demandPopin="true">
                                    <Text text="Unidad M." />
                                </Column>

                                <Column minScreenWidth="Tablet" demandPopin="true">
                                    <Text text="Proveedor" />
                                </Column>

                                <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                                    <Text text="Activo" />
                                </Column>

                                <Column hAlign="Center">
                                    <Text text="" />
                                </Column>

                                <!-- <Column hAlign="Center">
                                    <Text text="" />
                                </Column> -->

                            </columns>

                            <items>
                                <ColumnListItem vAlign="Middle">
                                    <cells>

                                        <Text text="{localModel>name}" />

                                        <Text text="{localModel>description}" />

                                        <Button press="onOpenViewImage" icon="sap-icon://picture" type="Emphasized"/>

                                        <Text text="{localModel>salePrice}" />

                                        <Text text="{localModel>purchasePrice}" />

                                        <Text text="{localModel>stock}" />

                                        <Text text="{localModel>unitOfMeasurementName}" />
                                        <Text text="{localModel>supplierName}" />

                                        <ObjectStatus text="{localModel>statusName}" icon="{localModel>statusIcon}" state="{localModel>statusState}" />

                                        <HBox class="contenRowIconTable">
                                            <Button icon="sap-icon://edit" type="Ghost"/>

                                            <Button icon="sap-icon://delete" type="Ghost"/>
                                        </HBox>


                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </IconTabFilter>
                    <IconTabFilter text="Proveedores">
                        <Table id="idProductsTable2" sticky="HeaderToolbar,ColumnHeaders" inset="false" items="{path: 'localModel>/listaTabla'}" class="sapFDynamicPageAlignContent" width="auto">
                            <headerToolbar>
                                <OverflowToolbar>
                                    <content>
                                        <Title text="Proveedores (X): " level="H2"/>
                                        <ToolbarSpacer />
                                        <Button text="Agregar" icon="sap-icon://add" type="Emphasized"/>
                                    </content>
                                </OverflowToolbar>

                            </headerToolbar>
                            <columns>
                                <Column width="150px">
                                    <Text text="Nombre" />
                                </Column>
                                <Column minScreenWidth="Tablet" demandPopin="true">
                                    <Text text="Telefono" />
                                </Column>
                                <Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
                                    <Text text="Dirección" />
                                </Column>
                                <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                                    <Text text="Estado" />
                                </Column>


                            </columns>

                            <items>
                                <ColumnListItem vAlign="Middle">
                                    <cells>

                                        <Text text="{localModel>product}" />

                                        <Text text="{localModel>product}" />

                                        <Text text="{localModel>product}" />

                                        <ObjectStatus class="sapUiSmallMarginBottom" text="Activo" icon="sap-icon://sys-enter-2" state="Success" />

                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </IconTabFilter>
                    <IconTabFilter text="Unidades de Medida">
                        <Table id="idProductsTable3" sticky="HeaderToolbar,ColumnHeaders" inset="false" items="{path: 'localModel>/listaTabla'}" class="sapFDynamicPageAlignContent" width="auto">
                            <headerToolbar>
                                <OverflowToolbar>
                                    <content>
                                        <Title text="Unidades de Medida (X): " level="H2"/>
                                        <ToolbarSpacer />
                                        <Button text="Agregar" icon="sap-icon://add" type="Transparent"/>
                                        <Button text="Configuración" icon="sap-icon://action-settings" type="Transparent"/>

                                    </content>
                                </OverflowToolbar>

                            </headerToolbar>
                            <columns>
                                <Column width="150px">
                                    <Text text="Nombre" />
                                </Column>
                                <Column minScreenWidth="Tablet" demandPopin="true">
                                    <Text text="Descripción" />
                                </Column>
                                <Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
                                    <Text text="Abreviatura" />
                                </Column>
                                <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
                                    <Text text="Estado" />
                                </Column>

                            </columns>

                            <items>
                                <ColumnListItem vAlign="Middle">
                                    <cells>

                                        <Text text="{localModel>product}" />

                                        <Text text="{localModel>product}" />

                                        <Text text="{localModel>product}" />


                                        <ObjectStatus class="sapUiSmallMarginBottom" text="Activo" icon="sap-icon://sys-enter-2" state="Success" />

                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </IconTabFilter>

                </items>
            </IconTabBar>
        </f:content>
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <!-- <Button icon="sap-icon://message-popup" text="{/messagesLength}" type="Emphasized" press="onMessageButtonPress" visible="{= !!${/messagesLength}}"/> -->
                <ToolbarSpacer/>
                <Button icon="sap-icon://excel-attachment" type="Accept" text="Exporta Excel"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>