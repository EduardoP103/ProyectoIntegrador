<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Dialog id="idEditProductDialog" title="{i18n>editProductDialogTitle}">
		<content>
			<VBox class="sapUiSmallMargin">
				<f:SimpleForm editable="true" layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="3">
					<f:content>
						<core:Title text="{i18n>editProductDialogTitle2}" />

						<Label text="{i18n>tab1TableC1}" />
						<Input required="true" placeholder="{i18n>addProductDialogPH1}" value="{path : 'formModel>/editProduct/productName' }" id="lcepNameId" liveChange="lcepName"/>

						<Label text="{i18n>tab1TableC2}" />
						<Input required="true" placeholder="{i18n>addProductDialogPH2}" value="{path : 'formModel>/editProduct/productDescription' }" id="lcapDescriptionId" liveChange="lcapDescription"/>
						
						<Label text="{i18n>tab1TableC3}" required="true" />
						<Input value="{path : 'formModel>/editProduct/imgUrl' }" placeholder="{i18n>addProductDialogPH3}" valueLiveUpdate="true" />
						<Image src="{path : 'formModel>/editProduct/imgUrl' }" width="100px" />
						
						<Label text="{i18n>tab1TableC4}" />
						<Input required="true" placeholder="{i18n>addProductDialogPH4}" value="{path : 'formModel>/editProduct/productPriceV' }" id="lcapPriceVId" liveChange="lcapPriceV"/>

						<Label text="{i18n>tab1TableC5}" />
						<Input required="true" placeholder="{i18n>addProductDialogPH5}" value="{path : 'formModel>/editProduct/productPriceC' }" id="lcapPriceCId" liveChange="lcapPriceC"/>

						<Label text="{i18n>tab1TableC6}" />
						<Input required="true" placeholder="{i18n>addProductDialogPH6}" value="{path : 'formModel>/editProduct/productStock' }" id="lcapStockId" liveChange="lcapStock"/>

						<Label text="{i18n>tab1TableC7}" />
						<Select required="true" items="{
						path: 'formModel>/selectUnitList'
					    }" selectedKey="{
                            path: 'formModel>/editProduct/idUnit'
                        }"
						change="onChangeUnitEdit"
						>
							<core:ListItem key="{formModel>key}" text="{formModel>text}" enabled="{= ${formModel>key} === '0' ? false : true }" />
						</Select>

						<Label text="{i18n>tab1TableC8}" />

						<Select required="true" items="{
						path: 'formModel>/selectProviderList'
					    }" selectedKey="{
                            path: 'formModel>/editProduct/idProvider'
                        }"
						change="onChangeProviderEdit"
						>
							<core:ListItem key="{formModel>key}" text="{formModel>text}" enabled="{= ${formModel>key} === '0' ? false : true }" />
						</Select>


						<Label text="{i18n>tab1TableC9}" />
						<Select required="true" items="{
						path: 'formModel>/selectStatusList'
					    }" selectedKey="{
                            path: 'formModel>/editProduct/idStatus'
                        }"
						change="onChangeStatusEdit"
						>
							<core:ListItem key="{formModel>key}" text="{formModel>text}" enabled="{= ${formModel>key} === '0' ? false : true }" />
						</Select>


					</f:content>

				</f:SimpleForm>
			</VBox>



		</content>
		<footer>
			<Toolbar>
				<content>
					<Button type="Accept" text="{i18n>dialogAcceptButton}" press="onEditProductSave" />
					<Button text="{i18n>dialogEditRejectButton}" type="Reject" press="onEditProductClose" ariaHasPopup="Dialog" />
				</content>
			</Toolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>