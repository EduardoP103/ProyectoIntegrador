<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Dialog id="EditarProd" title="Editar Productos">

		<content>

			<VBox class="sapUiSmallMargin" id="formContainerEmployment3">
				<f:SimpleForm editable="true" layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="5">
					<f:content>
						<core:Title text="EdiciÃ³n de Productos" />

						<Label text="name" />
						<Input required="true" value="{path : 'localModel>/editProduct/name' }" />
						<Label text="description" />
						<Input required="true" value="{path : 'localModel>/editProduct/description' }" />
						<Label text="Precio V." />
						<Input required="true" type="Number" value="{path : 'localModel>/editProduct/salePrice' }" />
						<Label text="Precio C." />
						<Input required="true" type="Number" value="{path : 'localModel>/editProduct/purchasePrice' }" />
						<Label text="Stock" />
						<Input required="true" type="Number" value="{path : 'localModel>/editProduct/stock' }" />
						<Label text="Unidad M." />
						<Select required="true" id="idunitOfMeasurementName2" items="{
						path: 'localModel>/unitOfMeasurementName'
					    }" selectedKey="{
                            path: 'localModel>/selectUnitOfMeasurementName'
                        }">
							<core:ListItem key="{localModel>id}" text="{localModel>name}" 
							enabled="{= ${localModel>id} === '0' ? false : true }"
							 />
						</Select>

						<Label text="{i18n>supplierName}" />

						<Select id="idsupplierName2" required="true" items="{
						path: 'localModel>/listSupplierName'
					    }" selectedKey="{
                            path: 'localModel>/selectSupplierName'
                        }">
							<core:ListItem key="{localModel>id}" text="{localModel>name}" 
							enabled="{= ${localModel>id} === '0' ? false : true }"
							 />
						</Select>
						
						<Label text="statusName" />
						<Select id="idstatusName2" required="true" items="{
						path: 'localModel>/statusName'
					    }" selectedKey="{
                            path: 'localModel>/selectStateName'
                        }">
							<core:ListItem key="{localModel>id}" text="{localModel>name}" 
							enabled="{= ${localModel>id} === '0' ? false : true }"
							 />
						</Select>

						<Label text="image" />
						<Input value="{path : 'localModel>/editProduct/image' }" valueLiveUpdate="true" />
						<Image src="{path : 'localModel>/editProduct/image' }" width="14rem" />




					</f:content>

				</f:SimpleForm>
			</VBox>

		</content>

		<footer>

			<Toolbar>

				<content>

					<Button text="Editar" type="Accept" press="onPressEditTabla" ariaHasPopup="Dialog" />

					<ToolbarSpacer/>

					<Button text="Cerrar" type="Reject" press="closeDialogProductoe" ariaHasPopup="Dialog" />

				</content>

			</Toolbar>

		</footer>

	</Dialog>
</core:FragmentDefinition>