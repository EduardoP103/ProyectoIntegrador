<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
>
	<Dialog
		id="Agregar"
		title="Agregar Proveedores"
	>
		<content>
			<VBox
				class="sapUiSmallMargin"
				id="formContainerEmployment1"
			>
				<f:SimpleForm
					editable="true"
					layout="ColumnLayout"
					columnsM="2"
					columnsL="3"
					columnsXL="4"
				>
					<f:content>
						<Label
							required="true"
							text="{i18n>name}"
						/>
						<Input
							value="{
								path: 'localModel>/addSupplierName/name'
							}"
							liveChange="onInputChange"
						/>
                        <Label
							required="true"
							text="{i18n>phone}"
						/>
						<Input
							value="{
								path: 'localModel>/addSupplierName/phone'
							}"
							liveChange="onNumberInput"
						/>
                        <Label
							required="true"
							text="{i18n>address}"
						/>
						<Input
							value="{
								path: 'localModel>/addSupplierName/address'
							}"
						/>
						<Label text="{i18n>statusName}"/>
						<Select 
							id="idStatus"
							required="true"
							items="{
								path: 'localModel>/activo'
							}"
							selectedKey="{
								path: 'localModel>/selectStateName'
							}"
						>
							<core:ListItem
								key="{localModel>id}"
								text="{localModel>name}"
								enabled="{= ${localModel>id} === '0' ? false : true }"
							/>
						</Select>
					</f:content>
				</f:SimpleForm>
			</VBox>
		</content>
		<footer>
			<Toolbar justifyContent="End">
				<content>
					<Button
						text="Agregar"
						icon="sap-icon://add-activity"
						type="Accept"
						press="onAddSupplierNameTable"
						ariaHasPopup="Dialog"
					/>
					<Button
						text="Limpiar"
						icon="sap-icon://clear-filter"
						press="onClearInputs"
					/>
					<ToolbarSpacer/>
					<Button
						text="Cerrar"
						type="Reject"
						press="closeDialogAddSupplierName"
						ariaHasPopup="Dialog"
					/>
				</content>
			</Toolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>