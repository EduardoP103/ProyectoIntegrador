<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Dialog id="idAddProductDialog" title="{i18n>addProductDialogTitle}">
		<content>
			<VBox class="sapUiSmallMargin">
				<f:SimpleForm editable="true" layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="3">
					<f:content>
						<core:Title text="{i18n>addProductDialogTitle2}" />

						<Label text="{i18n>tab1TableC1}" />
						<Input required="true" placeholder="{i18n>addProductDialogPH1}" value="{path : 'formModel>/addProduct/productName' }" />

						<Label text="{i18n>tab1TableC2}" />
						<Input required="true" placeholder="{i18n>addProductDialogPH2}" value="{path : 'formModel>/addProduct/productDescription' }" />
						
						<Label text="{i18n>tab1TableC3}" required="true" />
						<Input value="{path : 'formModel>/addProduct/imgUrl' }" placeholder="{i18n>addProductDialogPH3}" valueLiveUpdate="true" />
						<Image src="{path : 'formModel>/addProduct/imgUrl' }" width="100px" />
						
						<Label text="{i18n>tab1TableC4}" />
						<Input required="true" placeholder="{i18n>addProductDialogPH4}" value="{path : 'formModel>/addProduct/productPriceV' }" />

						<Label text="{i18n>tab1TableC5}" />
						<Input required="true" placeholder="{i18n>addProductDialogPH5}" value="{path : 'formModel>/addProduct/productPriceC' }" />

						<Label text="{i18n>tab1TableC6}" />
						<Input required="true" placeholder="{i18n>addProductDialogPH6}" value="{path : 'formModel>/addProduct/productStock' }" />

						<Label text="{i18n>tab1TableC7}" />
						<Select required="true" items="{
						path: 'formModel>/selectMeasurementList'
					    }" selectedKey="{
                            path: 'formModel>/addProduct/idMeasurement'
                        }"
						change="onChangeMeasurementAdd"
						>
							<core:ListItem key="{formModel>key}" text="{formModel>text}" enabled="{= ${formModel>key} === '0' ? false : true }" />
						</Select>

						<Label text="{i18n>tab1TableC8}" />

						<Select required="true" items="{
						path: 'formModel>/selectProviderList'
					    }" selectedKey="{
                            path: 'formModel>/addProduct/idProvider'
                        }"
						change="onChangeProviderAdd"
						>
							<core:ListItem key="{formModel>key}" text="{formModel>text}" enabled="{= ${formModel>key} === '0' ? false : true }" />
						</Select>


						<Label text="{i18n>tab1TableC9}" />
						<Select required="true" items="{
						path: 'formModel>/selectStatusList'
					    }" selectedKey="{
                            path: 'formModel>/addProduct/idStatus'
                        }"
						change="onChangeStatusAdd"
						>
							<core:ListItem key="{formModel>key}" text="{formModel>text}" enabled="{= ${formModel>key} === '0' ? false : true }" />
						</Select>


					</f:content>

				</f:SimpleForm>
			</VBox>
		</content>
		<footer>
			<Toolbar>
				<content>
					<Button type="Accept" text="{i18n>dialogAcceptButton}" press="onAddProductSave" />
					<Button text="{i18n>dialogRejectButton}" type="Reject" press="onAddProductClose" ariaHasPopup="Dialog" />
				</content>
			</Toolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>