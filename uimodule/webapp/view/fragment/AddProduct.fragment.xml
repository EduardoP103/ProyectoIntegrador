<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Dialog id="idAddProductDialog" title="{i18n>addProductDialogTitle}">
		<content>
			<VBox class="sapUiSmallMargin">
				<f:SimpleForm editable="true" layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="5">
					<f:content>
						<core:Title text="Ingreso de Productos" />

						<Label text="Nombre" />
						<Input required="true" value="{path : 'formModel>/addProducto/productName' }" />


						<Label text="Unidad de Medida" />
						<Select required="true" items="{
						path: 'formModel>/selectMeasurementList'
					    }" selectedKey="{
                            path: 'formModel>/addProducto/idMesurement'
                        }"
						change="onChangeMeasurementAdd"
						>
							<core:ListItem key="{formModel>key}" text="{formModel>text}" enabled="{= ${formModel>key} === '0' ? false : true }" />
						</Select>

						<Label text="Proveedor" />

						<Select required="true" items="{
						path: 'formModel>/selectSupplierList'
					    }" selectedKey="{
                            path: 'formModel>/addProducto/idSupplier'
                        }"
						change="onChangeSupplierAdd"
						>
							<core:ListItem key="{formModel>key}" text="{formModel>text}" enabled="{= ${formModel>key} === '0' ? false : true }" />
						</Select>


						<Label text="Activo" />
						<Select required="true" items="{
						path: 'formModel>/selectStatusList'
					    }" selectedKey="{
                            path: 'formModel>/addProducto/idStatus'
                        }"
						change="onChangeStatusAdd"
						>
							<core:ListItem key="{formModel>key}" text="{formModel>text}" enabled="{= ${formModel>key} === '0' ? false : true }" />
						</Select>

						<Label text="Imagen" required="true" />
						<Input value="{path : 'formModel>/addProducto/imgUrl' }" valueLiveUpdate="true" />
						<Image src="{path : 'formModel>/addProducto/imgUrl' }" width="100px" />



					</f:content>

				</f:SimpleForm>
			</VBox>



		</content>
		<footer>
			<Toolbar>
				<content>
					<Button type="Accept" text="{i18n>dialogAcceptButton}" press="onAddProductSave" />
					<Button text="{i18n>dialogRejectButton}" type="Reject" press="onAddProductClose" ariaHasPopup="Dialog" />
				</content>
			</Toolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>