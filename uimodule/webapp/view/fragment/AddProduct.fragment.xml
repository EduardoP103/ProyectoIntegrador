<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Dialog
		id="idAddProductDialog"
		title="{i18n>addProductDialogTitle}">
		<content>
            <VBox class="sapUiSmallMargin" id="dialogo">
	<f:SimpleForm editable="true" layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="5">
					<f:content>
						<core:Title text="Ingreso de Productos" />

						<Label text="Nombre" />
						<Input required="true" value="{path : 'formularioSimple>/addProducto/nombre' }" />

</f:content>

				</f:SimpleForm>
            </VBox>

			

        </content> 
		<footer>
			<Toolbar>
				<content>
					<Button type="Accept"
							text="{i18n>dialogAcceptButton}"
							press="onCloseDialog_GuardarAddProduct" />
					<Button id="Reject"
						text="{i18n>dialogRejectButton}"
						type="Reject"
						press="onCloseDialog_CancelarAddProduct"
						ariaHasPopup="Dialog" />
				</content>
			</Toolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>