<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Dialog
		id="idAddProductDialog"
		title="{i18n>addProductDialogTitle}">
		<content>
            <VBox class="sapUiSmallMargin" id="dialogo">
                <Label text="Nombre del producto" />
                <Input id="fragmentProductName"
                            placeholder="{i18n>phColorFavorito}"
                            value="{
                            path:'formularioModel>/colorFavorito'
                        }" />
            </VBox>
        </content> 
		<footer>
			<Toolbar>
				<content>
					<Button type="Accept"
							text="{i18n>dialogAcceptButton}"
							press="onCloseDialog_GuardarAddProduct" />
					<Button id="Reject"
						text="{i18n>dialogRejectButton}"
						type="Reject"
						press="onCloseDialog_CancelarAddProduct"
						ariaHasPopup="Dialog" />
				</content>
			</Toolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>