<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core">
	<Dialog id="AgregarProd" title="Agregar Productos">

		<content>

			<VBox alignItems="Center">
				<Image
				src="https://static.vecteezy.com/system/resources/previews/005/165/208/non_2x/add-to-cart-icon-style-add-product-in-trolley-vector.jpg"
				mode="{/imageMode}"
				height="150px"
				backgroundSize="5em 5em"
				backgroundPosition="center"
				width="auto"
                class="img" >
                    <layoutData>
                        <FlexItemData growFactor="0.5" />
                    </layoutData>
				</Image>
			</VBox>

			<VBox class="sapUiSmallMargin" id="formAgregarProducto">
				<f:SimpleForm editable="true" layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="5">
					<f:content>
						<core:Title text="Ingreso de Productos" />

						<Label text="Nombre" />
						<Input required="true" value="{path : 'formularioSimple>/addProducto/nombre' }" />
						<Label text="Descripcion" />
						<Input required="true" value="{path : 'formularioSimple>/addProducto/descripcion' }" />
						<Label text="Precio V." />
						<Input required="true" type="Number" value="{path : 'formularioSimple>/addProducto/preciov' }" />
						<Label text="Precio C." />
						<Input required="true" type="Number" value="{path : 'formularioSimple>/addProducto/precioc' }" />
						<Label text="Stock" />
						<Input required="true" type="Number" value="{path : 'formularioSimple>/addProducto/stock' }" />
						<Label text="Unidad M." />
						<Select required="true" id="idUnidadMedida" items="{
						path: 'formularioSimple>/unidadMedida'
					    }" selectedKey="{
                            path: 'formularioSimple>/selectUnidadMedida'
                        }">
							<core:ListItem key="{formularioSimple>id}" text="{formularioSimple>name}" 
							enabled="{= ${formularioSimple>id} === '0' ? false : true }"
							 />
						</Select>

						<Label text="Proveedor" />

						<Select id="idProveedor" required="true" items="{
						path: 'formularioSimple>/listaProveedores'
					    }" selectedKey="{
                            path: 'formularioSimple>/selectProveedor'
                        }">
							<core:ListItem key="{formularioSimple>id}" text="{formularioSimple>name}" 
							enabled="{= ${formularioSimple>id} === '0' ? false : true }"
							 />
						</Select>
						
						<Label text="Activo" />
						<Select id="idActivo" required="true" items="{
						path: 'formularioSimple>/activo'
					    }" selectedKey="{
                            path: 'formularioSimple>/selectActivo'
                        }">
							<core:ListItem key="{formularioSimple>id}" text="{formularioSimple>name}" 
							enabled="{= ${formularioSimple>id} === '0' ? false : true }"
							 />
						</Select>

						<Label text="Imagen" />
						<Input value="{path : 'formularioSimple>/addProducto/urlImage' }" valueLiveUpdate="true" />
						<Image src="{path : 'formularioSimple>/addProducto/urlImage' }" width="100px" />




					</f:content>

				</f:SimpleForm>
			</VBox>

		</content>

		<footer>

			<Toolbar>

				<content>

					<Button text="Agregar" type="Accept" press="onAddProductoTabla" ariaHasPopup="Dialog" />

					<ToolbarSpacer/>

					<Button text="Limpiar" icon="sap-icon://clear-all" press="onLimpiarCamposDialogos"/>

					<ToolbarSpacer/>

					<Button text="Cerrar" type="Reject" press="closeDialogProducto" ariaHasPopup="Dialog" />

				</content>

			</Toolbar>

		</footer>

	</Dialog>
</core:FragmentDefinition>