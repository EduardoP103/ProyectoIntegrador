<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		id="myPopover"
		title="{path: 'localModel>/selectedRowView/name'}"
		class="sapUiContentPadding"
		placement="Bottom" >
		<endButton>
			<Button
					text="Cerrar"
					press="oCloseImage" />
		</endButton>
		<content>
			<Image src="{path: 'localModel>/selectedRowView/image'}" width="15em"  />
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>