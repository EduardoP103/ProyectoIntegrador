<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core">
	<Dialog id="AgregarUnidadMedida" title="Agregar Unidad Medida">

		<content>

			<VBox alignItems="Center">
				<Image
				src="https://cdn-icons-png.flaticon.com/512/3937/3937813.png"
				mode="{/imageMode}"
				height="150px"
				backgroundSize="5em 5em"
				backgroundPosition="center"
				width="auto"
                class="img" >
                    <layoutData>
                        <FlexItemData growFactor="0.5" />
                    </layoutData>
				</Image>
			</VBox>

			<VBox class="sapUiSmallMargin" id="formAgregarUnidadMedida">
				<f:SimpleForm editable="true" layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="4">
					<f:content>
						<core:Title text="Ingreso de Unidad de Medida" />

						<Label text="Nombre" />
						<Input required="true" value="{path : 'formularioSimple>/addUnidadMedida/nombre' }" />
						<Label text="Descripcion" />
						<Input required="true" value="{path : 'formularioSimple>/addUnidadMedida/descripcion' }" />
						<Label text="Abreviatura" />
						<Input required="true" value="{path : 'formularioSimple>/addUnidadMedida/abreviatura' }" />
						<Label text="Activo" />
						<Select id="idActivoUM" required="true" items="{
						path: 'formularioSimple>/activo'
					    }" selectedKey="{
                            path: 'formularioSimple>/selectActivo'
                        }">
							<core:ListItem key="{formularioSimple>id}" text="{formularioSimple>name}" 
							enabled="{= ${formularioSimple>id} === '0' ? false : true }"
							 />
						</Select>

					</f:content>

				</f:SimpleForm>
			</VBox>

		</content>

		<footer>

			<Toolbar>

				<content>

					<Button text="Agregar" type="Accept" press="onAddUnidadMedidaTabla" ariaHasPopup="Dialog" />

					<ToolbarSpacer/>

					<Button text="Limpiar" icon="sap-icon://clear-all" press="onLimpiarCamposDialogos"/>

					<ToolbarSpacer/>

					<Button text="Cerrar" type="Reject" press="closeDialogUnidadMedida" ariaHasPopup="Dialog" />

				</content>

			</Toolbar>

		</footer>

	</Dialog>
</core:FragmentDefinition>