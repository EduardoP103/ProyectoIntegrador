<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
>
	<Dialog
		id="DialogEditSupplierName"
		title="Editar Proveedor"
	>
		<content>
			<VBox class="sapUiSmallMargin">
				<f:SimpleForm
					editable="true"
					layout="ColumnLayout"
					columnsM="2"
					columnsL="3"
					columnsXL="4"
				>
					<f:content>
						<Label
							text="{i18n>name}"
							required="true"
						/>
						<Input
							value="{
								path: 'localModel>/editSupplierName/name'
							}"
							liveChange="onInputChange"
						/>
						<Label
							text="{i18n>phone}"
							required="true"
						/>
						<Input
							value="{
								path: 'localModel>/editSupplierName/phone'
							}"
							liveChange="onInputChange"
						/>
						<Select
							id="idUnitEdit"
							items="{
								path: 'localModel>/ListunitOfMeasurementName'
							}"
							selectedKey="{
								path: 'localModel>/selectUnitOfMeasurementName'
							}"
						>
							<core:ListItem
								key="{localModel>id}"
								text="{localModel>name}"
								enabled="{= ${localModel>id} === '0' ? false : true }"
							/>
						</Select>
							
						<Label
							text="{i18n>statusName}"
							required="true"
						/>
						<Select
							id="idStatusEdit"
							items="{
								path: 'localModel>/activo'
							}"
							selectedKey="{
								path: 'localModel>/selectStateName'
							}"
						>
							<core:ListItem
								key="{localModel>id}"
								text="{localModel>name}"
								enabled="{= ${localModel>id} === '0' ? false : true }"
							/>
						</Select>
						
					</f:content>
				</f:SimpleForm>
			</VBox>
		</content>
		<footer>
			<Toolbar justifyContent="End">
				<content>
					<Button
						text="Actualizar"
						icon="sap-icon://add-activity"
						type="Accept"
						press="onPressEditProduct"
						ariaHasPopup="Dialog"
					/>
					<Button
						text="Limpiar"
						icon="sap-icon://clear-filter"
						press="onClearInputs"
					/>
					<ToolbarSpacer/>
					<Button
						text="Cerrar"
						type="Reject"
						press="closeEditDialogSupplierName"
						ariaHasPopup="Dialog"
					/>
				</content>
			</Toolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>