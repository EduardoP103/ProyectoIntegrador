<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Dialog
		id="EliminarProductoFragment"
		title="Confirmación">

		<content>

            <VBox alignItems="Center">
				<Image
				src="https://cdn-icons-png.flaticon.com/512/3221/3221897.png"
				mode="{/imageMode}"
				height="120px"
				backgroundSize="5em 5em"
				backgroundPosition="center"
				width="auto"
                class="img" >
                    <layoutData>
                        <FlexItemData growFactor="0.5" />
                    </layoutData>
				</Image>
			</VBox>

			<VBox class="sapUiSmallMargin" id="formContainerEmployment4">
				<f:SimpleForm editable="true"
					layout="ColumnLayout"
					columnsM="2"
					columnsL="2"
					columnsXL="2">
					<f:content>
						<core:Title  text="¿Desea eliminar el producto {= ${formularioSimple>/selectedRowEliminar/nombre}}?" />
					</f:content>
				</f:SimpleForm>
			</VBox>
		</content>
		<footer>
			<Toolbar>
				<content>
					
					<Button type="Critical"
							text="Eliminar"
							press="onPressEliminarProducto" />

                            <ToolbarSpacer/>

					<Button id="EliminarProductoBoton"
						text="Cerrar"
						type="Reject"
						press="closeDialogEliminarProducto"
						ariaHasPopup="Dialog" />
				</content>
			</Toolbar>
		</footer>

        
	</Dialog>
</core:FragmentDefinition>