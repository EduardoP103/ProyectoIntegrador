<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core">
	<Dialog id="Agregar2" title="Agregar Proveedor">

		<content>

			<VBox alignItems="Center">
				<Image
				src="https://cdn-icons-png.flaticon.com/512/4003/4003697.png"
				mode="{/imageMode}"
				height="150px"
				backgroundSize="5em 5em"
				backgroundPosition="center"
				width="auto"
                class="img" >
                    <layoutData>
                        <FlexItemData growFactor="0.5" />
                    </layoutData>
				</Image>
			</VBox>

			<VBox class="sapUiSmallMargin" id="formAgregarProveedor">
				<f:SimpleForm editable="true" layout="ColumnLayout" columnsM="2" columnsL="2" columnsXL="4">
					<f:content>
						<core:Title text="Ingreso de Proveedor" />

						<Label text="Nombre" />
						<Input required="true" value="{path : 'formularioSimple>/addProveedor/nombre' }" />
						<Label text="Telefono" />
						<Input required="true" type="Number" value="{path : 'formularioSimple>/addProveedor/telefono' }" />
						<Label text="DirecciÃ³n" />
						<Input required="true" value="{path : 'formularioSimple>/addProveedor/direccion' }" />
						<Label text="Activo" />
						<Select id="idActivo3" required="true" items="{
						path: 'formularioSimple>/activo'
					    }" selectedKey="{
                            path: 'formularioSimple>/selectActivo'
                        }">
							<core:ListItem key="{formularioSimple>id}" text="{formularioSimple>name}" 
							enabled="{= ${formularioSimple>id} === '0' ? false : true }"
							 />
						</Select>

					</f:content>

				</f:SimpleForm>
			</VBox>

		</content>

		<footer>

			<Toolbar>

				<content>

					<Button text="Agregar" type="Accept" press="onAddProveedorTabla" ariaHasPopup="Dialog" icon="sap-icon://supplier"/>

					<ToolbarSpacer/>

					<Button text="Limpiar" icon="sap-icon://clear-all" press="onLimpiarCamposDialogos"/>

					<ToolbarSpacer/>

					<Button text="Cerrar" type="Reject" press="closeDialogProveedor" ariaHasPopup="Dialog" icon="sap-icon://decline"/>

				</content>

			</Toolbar>

		</footer>

	</Dialog>
</core:FragmentDefinition>