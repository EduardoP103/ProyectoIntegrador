<core:FragmentDefinition xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core">
	<Dialog id="EditarProd" title="Editar Productos">

		<content>

			<VBox alignItems="Center">
				<Image
				src="https://cdn-icons-png.flaticon.com/512/269/269074.png"
				mode="{/imageMode}"
				height="120px"
				backgroundSize="5em 5em"
				backgroundPosition="center"
				width="auto"
                class="img" >
                    <layoutData>
                        <FlexItemData growFactor="0.5" />
                    </layoutData>
				</Image>
			</VBox>

			<VBox class="sapUiSmallMargin" id="formEditarProducto">
				<f:SimpleForm editable="true" layout="ColumnLayout" columnsM="2" columnsL="3" columnsXL="5">
					<f:content>
						<core:Title text="EdiciÃ³n de Productos" />

						<Label text="Nombre" />
						<Input required="true" value="{path : 'formularioSimple>/editProducto/nombre' }" />
						<Label text="Descripcion" />
						<Input required="true" value="{path : 'formularioSimple>/editProducto/descripcion' }" />
						<Label text="Precio V." />
						<Input required="true" type="Number" value="{path : 'formularioSimple>/editProducto/preciov' }" />
						<Label text="Precio C." />
						<Input required="true" type="Number" value="{path : 'formularioSimple>/editProducto/precioc' }" />
						<Label text="Stock" />
						<Input required="true" type="Number" value="{path : 'formularioSimple>/editProducto/stock' }" />
						<Label text="Unidad M." />
						<Select required="true" id="idUnidadMedida2" items="{
						path: 'formularioSimple>/unidadMedida'
					    }" selectedKey="{
                            path: 'formularioSimple>/selectUnidadMedida'
                        }">
							<core:ListItem key="{formularioSimple>id}" text="{formularioSimple>name}" 
							enabled="{= ${formularioSimple>id} === '0' ? false : true }"
							 />
						</Select>

						<Label text="Proveedor" />

						<Select id="idProveedor2" required="true" items="{
						path: 'formularioSimple>/listaProveedores'
					    }" selectedKey="{
                            path: 'formularioSimple>/selectProveedor'
                        }">
							<core:ListItem key="{formularioSimple>id}" text="{formularioSimple>name}" 
							enabled="{= ${formularioSimple>id} === '0' ? false : true }"
							 />
						</Select>
						
						<Label text="Activo" />
						<Select id="idActivo2" required="true" items="{
						path: 'formularioSimple>/activo'
					    }" selectedKey="{
                            path: 'formularioSimple>/selectActivo'
                        }">
							<core:ListItem key="{formularioSimple>id}" text="{formularioSimple>name}" 
							enabled="{= ${formularioSimple>id} === '0' ? false : true }"
							 />
						</Select>

						<Label text="Imagen" />
						<Input value="{path : 'formularioSimple>/editProducto/urlImage' }" valueLiveUpdate="true" />
						<Image src="{path : 'formularioSimple>/editProducto/urlImage' }" width="100px" />




					</f:content>

				</f:SimpleForm>
			</VBox>

		</content>

		<footer>

			<Toolbar>

				<content>

					<Button text="Editar" type="Accept" press="onEditProductoTabla" ariaHasPopup="Dialog" icon="sap-icon://edit"/>

					<ToolbarSpacer/>

					<Button text="Cerrar" type="Reject" press="closeDialogProductoe" ariaHasPopup="Dialog" icon="sap-icon://decline"/>

				</content>

			</Toolbar>

		</footer>

	</Dialog>
</core:FragmentDefinition>